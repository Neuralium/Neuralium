{
    "AppSettings": {
        "SystemFilesPath" : "/home/data",
        "logLevel" : "3",
       
        "NeuraliumChainConfiguration" : {
           
        }
    },
    "Logging": {
        "IncludeScopes": false,
        "Debug": {
            "LogLevel": {
                "Default": "Error",
                "Microsoft": "Error"
            }
        },
        "Console": {
            "LogLevel": {
                "Default": "Error",
                "Microsoft": "Error"
            }
        }
    },
    "Serilog": {
        "Using":  ["Serilog.Sinks.Console", "Neuralium"],
        "MinimumLevel":{
            "Default": "Information",
            "Override": {
                "Microsoft": "Error",
                "System": "Error"
            }
        },
        //https://github.com/serilog/serilog-sinks-console
        "WriteTo": [
            {
                "Name": "RpcEventLogSink"
            },
            {
            "Name": "Async",
            "Args": {
                "configure": [
                    {
                        "Name": "Console",
                        "Args": {
                            "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                            "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties}{NewLine}{Exception}"
                        }
                    }
                ]
            }
        }],
        "Enrich": ["FromLogContext", "WithThreadId" , "WithExceptionDetails"],
        "Properties": {

        }
    }
}